<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trending_background"
    tools:context=".HomeActivityPatient">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="125dp"
                android:layout_height="153dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/bmi1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/title_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/title_text"/>


            <EditText
                android:id="@+id/firstnameReg"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/title_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_user"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/lastnameReg"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:drawablePadding="10dp"
                android:layout_below="@+id/firstnameReg"
                android:layout_centerInParent="true"
                android:layout_marginTop="28dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_user"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/emailReg"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:drawablePadding="10dp"
                android:layout_below="@+id/lastnameReg"
                android:layout_centerInParent="true"
                android:layout_marginTop="28dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_email"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/passwordReg"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:drawablePadding="10dp"
                android:layout_below="@+id/emailReg"
                android:layout_centerInParent="true"
                android:layout_marginTop="28dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_password"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/ageReg"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:drawablePadding="10dp"
                android:layout_below="@+id/passwordReg"
                android:layout_centerInParent="true"
                android:layout_marginTop="28dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_date"
                android:ems="10"
                android:hint="Âge"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/phoneReg"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:drawablePadding="10dp"
                android:layout_below="@+id/ageReg"
                android:layout_centerInParent="true"
                android:layout_marginTop="28dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_phone"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="Autofill" />

            <RadioGroup
                android:id="@+id/radioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:buttonTint="@color/white"
                android:layout_marginTop="30dp">

                <RadioButton
                    android:id="@+id/intervenantBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Intervenant"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/medecinBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Médecin"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/patientBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RadioGroup>

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/radioBtn"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorTrendingStart"
                android:layout_marginTop="30dp"
                android:text="Register" />

            <TextView
                android:id="@+id/Connexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginBtn"
                android:layout_marginTop="30dp"
                android:text="Déjà inscrit ? Connectez-vous"
                android:textColor="#f9f9f9"
                android:layout_marginBottom="30dp"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
